{
    "version": "2.0.0",
    "tasks": [{
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/conways-game-of-life.tests/conways-game-of-life.tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group" : {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/conways-game-of-life.tests/conways-game-of-life.tests.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "watch-tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "--project",
                "conways-game-of-life.tests",
                "test"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}

